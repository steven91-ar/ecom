{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<section class="product-edit-page">
    <h1 class="text-center mb-4">Liste des produits</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col" class="col-description">Description</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td class="text-truncate" title="{{ product.name }}">{{ product.name }}</td>
                    <td class="text-truncate col-description" title="{{ product.description }}">{{ product.description
                        }}</td>
                    <td>{{ product.price }} €</td>
                    <td class="text-truncate" title="{{ product.image }}">{{ product.image }}</td>
                    <td>
                        <a class=" btn btn-outline-primary btn-sm"
                            href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                        <a class="btn btn-outline-secondary btn-sm"
                            href="{{ path('app_product_edit', {'id': product.id}) }}">Éditer</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucun enregistrement trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a class="btn btn-success" href="{{ path('app_product_new') }}">Créer un nouveau produit</a>
    </div>
</section>

{% endblock %}
