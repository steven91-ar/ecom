{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<section class="product-edit-page">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn">Modifier</a>

    <div class="action-links">
        <a href="{{ path('app_product_index') }}" class="custom-link">Retourner Ã  la liste des articles</a>
        {{ include('product/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
    </div>
</section>
{% endblock %}