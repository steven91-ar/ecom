{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
<section class="shop-page">
    <div class="d-flex justify-content-evenly">
        {% for product in products %}
        <div class="card m-3">
            <img src="{{ asset('uploads/products/' ~ product.image )}}" class="card-img-top" alt="product image"
                style="width: 80%; margin: 10%;">
            <div class="card-body">
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text">{{ product.description }}</p>
                <p class="card-text">{{ product.price }} {{ product.currency }}</p>
                <a href="{{ product.id is not same as 1 ? path('app_cart_add', {'id': product.id }) : path('app_car_formation', {'id': product.id }) }}"
                    class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-cart-plus" viewBox="0 0 16 16">
                        <path
                            d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9z" />
                        <path
                            d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                    </svg>
                    Ajouter au panier
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}