{% extends 'base.html.twig' %}
{% block title %}Se connecter !{% endblock %}
{%block stylesheets %}
{{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}
<section class="login-page">
    <div class="container">
        <div class="row">
            <!-- Colonne gauche : Formulaire -->
            <div id="login-container">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se
                        déconnecter</a>
                </div>
                {% endif %}

                <h1>Connexion</h1>
                <p id="required-field">* Champ obligatoire</p>
                <form method="post">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                        autocomplete="email" required autofocus>
                    <label id="passwordLabel" for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                        autocomplete="current-password" required>
                    <div id="eye">
                        <span class="material-symbols-outlined eye-off">visibility_off</span>
                        <span class="material-symbols-outlined eye-on">visibility</span>
                        <span class="displayEye">Afficher le mot de passe</span>
                        <span class="noDisplay">Cacher le mot de passe</span>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-footer">
                        <button class="btn btn-primary" type="submit">Se connecter</button>
                        <div class="mb-3 text">Vous avez oublié votre mot de passe ? <a
                                href="{{ path('app_forgot_password_request')}}">Cliquez ici</a></div>
                        <div class="mb-3 text">Vous n'êtes pas enregistré ? <a
                                href="{{ path('app_register')}}">Enregistrez-vous
                                en cliquant ici</a></div>
                    </div>
                </form>
            </div>

            <!-- Colonne droite : Image -->
            <div class="col-md-6 image-container">
                <img src="{{ asset('images/banners/form-banner-2.jpg') }}" alt="Image page connexion" class="img-fluid">
            </div>
        </div>
    </div>
</section>
{% endblock %}