{% extends 'base.html.twig' %}

{% block title %}Hello MySpaceController!{% endblock %}

{% block body %}
{% for flash_success in app.flashes('success') %}
<div class="alert alert-success" role="alert">{{ flash_success }}</div>
{% endfor %}

<h1>Bonjour {{ firstname }} !</h1>
<br>
{% if verified is same as true %}
<div class="text">Votre adresse email a bien été vérifiée.</div>
{% elseif verified is same as false %}
<div class="text">Votre adresse email n'a pas été vérifiée.</div>
{% endif %}
<br>
<h2>Vos données personnelles :</h2>
<br>
<br>
<p>{{ name }} {{ firstname }}</p>
<p>{{ email }}</p>
<br>
<br>
{% if is_granted('ROLE_CUSTOMER') or is_granted('ROLE_ADMIN') %}
<h2>Votre formation !</h2>
<br>
<div class="text-center">
    <a class="btn btn-success" href="{{asset('formationdev.zip')}}" download="formation.zip">Télécharger la
        formation</a>
</div>
{% endif %}
{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('app_product_index') }}">Gérer les produits</a>
{% endif %}
{% endblock %}