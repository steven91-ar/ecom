{% extends 'base.html.twig' %}

{% block title %}Mon espace{% endblock %}

{% block body %}
<section class="my-space-page">
    <div class="container">
        <div class="row">
            <!-- Colonne gauche : Données personnelles et boutons -->
            <div id="my-space-container" class="col-md-6">
                {% if verified is same as true %}
                <div class="alert alert-success" role="alert">
                    Votre adresse email a bien été vérifiée.
                </div>
                {% elseif verified is same as false %}
                <div class="alert alert-danger" role="alert">
                    Votre adresse email n'a pas été vérifiée. <a href="{{ path('app_product_index') }}">Vous pouvez le
                        faire ici.</a>
                </div>
                {% endif %}

                <h1>Vos données personnelles :</h1>
                <div class="content">
                    <div class="personal-info">
                        <div>
                            <label for="name">Nom :</label>
                            <p>{{ name }}</p>
                        </div>
                        <div>
                            <label for="firstname">Prénom :</label>
                            <p>{{ firstname }}</p>
                        </div>
                        <div>
                            <label for="email">Email :</label>
                            <p>{{ email }}</p>
                        </div>
                    </div>

                    <!-- Boutons -->
                    <div class="buttons-section">
                        <ul>
                            <li>
                                <a class="btn" href="{{ path('app_cart') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path
                                            d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a class="btn" href="{{ path('app_cart') }}">Modifier informations personnelles</a>
                            </li>
                            <li>
                                <a class="btn" href="{{ path('app_forgot_password_request') }}">Modifier mot de
                                    passe</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('app_product_index') }}" class="admin-link">Gérer les produits</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Colonne droite : Image -->
            <div class="col-md-6">
                <div class="image-container">
                    <img src="{{ asset('images/banners/form-banner-1.jpg') }}" alt="Image page s'enregistrer"
                        class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}